@{
  Layout = "_Layout";
}
@using System.Collections.Generic;
@using UniversityRegistrar.Models;
@model List<UniversityRegistrar.Models.Student>
  
<h1>Students</h1>

@if (@Model.Count == 0)
{
  <h3>No Students have been enrolled yet.</h3>
}

@foreach (Student student in Model)
{
  <li>@Html.ActionLink($"{student.StudentName}", "Details", new { id = student.StudentId }) | @student.Course.CourseName</li>
}

<p>@Html.ActionLink("Add New Student", "Create")</p>
<p>@Html.ActionLink("Home","Index","Home")</p>