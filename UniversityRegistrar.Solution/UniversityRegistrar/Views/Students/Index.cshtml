@{
  Layout = "_Layout";
}
@using System.Collections.Generic;
@using UniversityRegistrar.Models;
@model List<UniversityRegistrar.Models.Student>
  
<h1>Students Enrolled</h1>

@if (@Model.Count == 0)
{
  <h3>No Students have been enrolled yet.</h3>
}

@foreach (Student student in Model)
{
  <li>@Html.ActionLink($"{student.StudentName}", "Details", new { id = student.StudentId}) | @student.Course.CourseName</li>
}
<br>
<div class = "form-group row">
  <button style="background: transparent !important;">@Html.ActionLink("Add New Student", "Create", null, null, new { style = "color: Black;"})</button>
</div>
<div class = "form-group row">
  <button style="background: transparent !important;">@Html.ActionLink("Home","Index","Home", null, new { style = "color: Black;"})</button>
</div>
