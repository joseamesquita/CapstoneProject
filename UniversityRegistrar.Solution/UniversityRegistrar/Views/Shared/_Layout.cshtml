<!DOCTYPE html>
<html>
  <div style = "background: linear-gradient(to bottom, #0066ff 0%, #99ff99 100%);">
  <head>
    <meta charset="utf-8">
    <title>University Registrar</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link rel="stylesheet" href="css/styles.css">
  </head>
  <body>
    <nav class="navbar navbar-light bg-light">
        <div class="container">
            <div class="navbar-header navbar-light bg-light">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Coding Fundamentals", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
